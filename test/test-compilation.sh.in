#!/bin/bash

export LILAC=../src/bootstrap/lilac

function test_compilation {
  EXPECTED_RESULT=$1

  OBJECT=$(mktemp)
  LINKED=$(mktemp)

  trap "rm -f $OBJECT $LINKED" EXIT

  $LILAC -v -o $OBJECT

  @CC@ -o $LINKED $OBJECT

  RESULT=$($LINKED)

  if [[ $RESULT == $EXPECTED_RESULT ]] ; then
    return 0
  else
    return 1
  fi
}

function test_compilation_fail {
  $LILAC -v -o /dev/null
}
